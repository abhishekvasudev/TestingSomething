name: Export Notion Page

on:
  schedule:
    - cron: '0 0 * * 0'  # Trigger every Sunday at 00:00 UTC
  workflow_dispatch:

jobs:
  export:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: 3.8

      - name: Install Dependencies
        run: |
          python -m pip install --upgrade pip
          pip install notion

      - name: Export Notion Page
        env:
          NOTION_TOKEN: "v02:user_token_or_cookies:s6kwGCyQR58os8e3AkPG6DIcFvf5pcYp0u_IGLtheSN8zNVIveCCrDMYsXSLZKcwWfeuXsQldCkpngTYXHmD7Jv_DWKIK0AGu6hCExz-bYmNnegFo9BFRXPOkR9lu9yAe5qa"
          NOTION_PAGE_URL: "https://www.notion.so/abhishekvasudev/Abhishek-Vasudev-9f2745035a67456c88c91d7ab010604f"
        run: |
          python export_notion_page.py

      - name: Commit and Push Changes
        uses: EndBug/add-and-commit@v7
        with:
          author_name: GitHub Actions
          author_email: actions@github.com
          message: Exported Notion page
          add: exported_notion_page
          push: true
